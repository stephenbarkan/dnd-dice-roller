    <div class="relative flex items-center justify-between flex-1 py-6 mx-3 text-5xl leading-none sm:text-6xl resultDisplay rounded-xl">
      <div
        class="relative grid py-2 pl-8 pr-5 border-r-2 group svgGrid grid-absolute"
        @click="quantity = 1; outcome=null"
        :class="{'cursor-pointer': quantity > 1}">
        {% for die in dice %}

        <div class="relative w-16 h-16 transition transform sm:w-20 sm:h-20 grid-inset-0"
             x-show="amount == '{{die.name | replace("d", "") }}'"
             x-transition:enter="ease-smooth duration-300"
             x-transition:enter-start="opacity-0 -rotate-90 scale-50"
             x-transition:enter-end="opacity-100 transform-none"
             x-transition:leave="ease-smooth duration-200"
             x-transition:leave-start="opacity-100 transform-none"
             x-transition:leave-end="opacity-0 rotate-90 scale-50">
          {% include "icons/" + die.name + ".svg" %}
        </div>
        {% endfor %}
        <div
          x-show="quantity > 1"
                      id="diceAmount"
            x-transition:enter="ease-bouncy duration-150"
            x-transition:enter-start="opacity-0 scale-50"
            x-transition:enter-end="opacity-100 transform-none"
            x-transition:leave="ease-bouncy duration-200"
            x-transition:leave-start="opacity-100 transform-none"
            x-transition:leave-end="opacity-0 scale-50"
            x-text="quantity > 1 ? quantity : null"
            style="right: 1rem; bottom: -.25rem;"
            class="absolute flex items-center justify-center w-8 h-8 pt-1 text-base leading-none transform bg-red-500 rounded-full bg-opacity-10">
          </div>
          <div
            x-show="quantity > 1"
            class="absolute p-2 text-xs font-semibold text-center text-white transition duration-300 transform bg-black bg-opacity-75 rounded opacity-0 bg-blur ease-smooth w-max top-50 left-50 -translate-x-50 -translate-y-50 sm:text-sm group-hover:opacity-100 font-system">
            Reset dice amount
          </div>
      </div>


      <div class="flex justify-center flex-1 displayText">
        <div class="flex flex-col justify-center">
          {# <span x-show="amount == 20 && clearValue == false && (outcome === 20 || outcome === 1)"
                class="text-base tracking-wide">nat</span> #}
            <span
                x-text="outcome"
                x-show="clearValue == false"
                x-transition:enter="ease-smooth duration-500"
                x-transition:enter-start="opacity-0 translate-y-1"
                x-transition:enter-end="opacity-100 transform-none"
                x-transition:leave="ease-smooth duration-300"
                x-transition:leave-start="opacity-100 transform-none"
                x-transition:leave-end="opacity-0"
                class="block text-center text-red-500 transition transform pointer-events-all">
            </span>
            <span
                x-text="values.join(', ')"
                x-show="quantity > 1 && clearValue == false"
                x-transition:enter="ease-smooth duration-500 delay-300"
                x-transition:enter-start="opacity-0 -translate-y-1"
                x-transition:enter-end="opacity-100 transform-none"
                x-transition:leave="ease-smooth duration-300"
                x-transition:leave-start="opacity-100 transform-none"
                x-transition:leave-end="opacity-0"
                class="block text-xs leading-snug text-center transition transform"></span>
        </div>
      </div>
    </div>
