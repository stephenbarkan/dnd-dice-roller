    <div
         class="relative flex items-center justify-between flex-1 py-6 mx-3 text-5xl leading-none sm:text-6xl resultDisplay rounded-xl">
      <div class="grid py-2 pl-8 pr-4 border-r-2 svgGrid grid-absolute">
        {% for die in dice %}

        <div class="w-16 h-16 transition transform sm:w-20 sm:h-20 grid-inset-0"
             x-show="amount == '{{die.name | replace("d", "") }}'"
             x-transition:enter="ease-out duration-200"
             x-transition:enter-start="opacity-0 -rotate-90 scale-50"
             x-transition:enter-end="opacity-100 transform-none"
             x-transition:leave="ease-in duration-150"
             x-transition:leave-start="opacity-100 transform-none"
             x-transition:leave-end="opacity-0 rotate-90 scale-50">
          {% include "icons/" + die.name + ".svg" %}
        </div>

        {% endfor %}
      </div>


      <div class="flex justify-center flex-1 displayText">
        <div class="flex">
          {# <span x-show="amount == 20 && clearValue == false && (outcome === 20 || outcome === 1)"
                class="text-base tracking-wide">nat</span> #}
          <span
                x-text="outcome"
                x-show="clearValue == false"
                x-transition:enter="ease-out duration-300"
                x-transition:enter-start="opacity-0 translate-y-1"
                x-transition:enter-end="opacity-100 transform-none"
                x-transition:leave="ease-in duration-200"
                x-transition:leave-start="opacity-100 transform-none"
                x-transition:leave-end="opacity-0"
                class="block text-right text-red-500 transition transform pointer-events-all"></span>

        </div>
      </div>
    </div>